<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphics.GuiController">
   <children>
      <MenuBar prefHeight="20.0" prefWidth="1280.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane layoutX="540.0" layoutY="25.0" prefHeight="695.0" prefWidth="740.0">
         <children>
            <AnchorPane prefHeight="25.0" prefWidth="740.0">
               <children>
                  <Label layoutY="4.0" prefHeight="17.0" prefWidth="105.0" text="Console log" />
               </children>
            </AnchorPane>
            <TextArea id="consoleLog" fx:id="consoleLog" editable="false" layoutY="25.0" prefHeight="650.0" prefWidth="740.0" />
         </children>
      </AnchorPane>
      <AnchorPane layoutY="25.0" prefHeight="695.0" prefWidth="540.0">
         <children>
            <AnchorPane prefHeight="25.0" prefWidth="540.0">
               <children>
                  <Label layoutX="14.0" layoutY="4.0" prefHeight="17.0" prefWidth="95.0" text="Controls" />
               </children>
            </AnchorPane>
            <AnchorPane layoutY="25.0" prefHeight="670.0" prefWidth="540.0">
               <children>
                  <AnchorPane prefHeight="370.0" prefWidth="540.0">
                     <children>
                        <AnchorPane prefHeight="50.0" prefWidth="540.0">
                           <children>
                              <Label layoutX="15.0" prefHeight="25.0" prefWidth="65.0" text="Generation:" />
                              <Label layoutX="25.0" layoutY="20.0" prefHeight="25.0" text="Number of mansions to generate: " />
                              <TextField fx:id="manCount" layoutX="205.0" layoutY="20.0" prefHeight="25.0" prefWidth="75.0" />
                              <Button fx:id="genBtn" layoutX="325.0" layoutY="20.0" mnemonicParsing="false" onAction="#generate" prefHeight="25.0" text="Generate" />
                           </children>
                        </AnchorPane>
                        <AnchorPane layoutY="50.0" prefHeight="330.0" prefWidth="540.0">
                           <children>
                              <Label layoutX="15.0" prefHeight="25.0" prefWidth="65.0" text="Simulation:" />
                              <Label layoutX="120.0" layoutY="120.0" prefHeight="25.0" text="-pauses simulation" />
                              <Label layoutX="120.0" layoutY="50.0" prefHeight="25.0" text="-starts simulation" />
                              <Button id="resumeBtn" fx:id="resumeBtn" layoutX="50.0" layoutY="85.0" mnemonicParsing="false" onAction="#resumeAction" prefHeight="25.0" prefWidth="60.0" text="Resume" />
                              <Button id="startBtn" fx:id="startBtn" layoutX="50.0" layoutY="50.0" mnemonicParsing="false" onAction="#startAction" prefHeight="25.0" prefWidth="60.0" text="Start" />
                              <Button id="pauseBtn" fx:id="pauseBtn" layoutX="50.0" layoutY="120.0" mnemonicParsing="false" onAction="#pauseAction" prefHeight="25.0" prefWidth="60.0" text="Pause" />
                              <Button id="stopBtn" fx:id="stopBtn" layoutX="50.0" layoutY="155.0" mnemonicParsing="false" onAction="#stopAction" prefHeight="25.0" prefWidth="60.0" text="Stop" />
                              <Label layoutX="120.0" layoutY="85.0" prefHeight="25.0" text="-resumes paused simulations" />
                              <Label layoutX="120.0" layoutY="155.0" prefHeight="25.0" text="-stops the simulation" />
                              <Label layoutX="25.0" layoutY="20.0" prefHeight="25.0" text="Simulation speed in [ms]: " />
                              <TextField fx:id="simSpeed" layoutX="160.0" layoutY="20.0" prefHeight="25.0" prefWidth="50.0" />
                           </children>
                        </AnchorPane>
                     </children>
                  </AnchorPane>
                  <AnchorPane layoutY="370.0" prefHeight="300.0" prefWidth="540.0">
                     <children>
                        <Label layoutX="15.0" layoutY="15.0" prefHeight="25.0" prefWidth="65.0" text="Truck info" />
                        <TextArea id="truckLog" fx:id="truckLog" editable="false" layoutX="15.0" layoutY="40.0" prefHeight="240.0" prefWidth="525.0" />
                     </children>
                  </AnchorPane>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
